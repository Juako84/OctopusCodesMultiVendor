<html lang="en">
<head>
    <meta charset="utf-8">
    <title>
        <titleAdmin />
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <link id="callCss" rel="stylesheet" href="~/User/themes/bootshop/bootstrap.min.css" media="screen" />
    <link href="~/User/themes/css/base.css" rel="stylesheet" media="screen" />
    <link href="~/User/themes/css/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="~/User/themes/css/font-awesome.css" rel="stylesheet" type="text/css">
    <link href="~/User/themes/js/google-code-prettify/prettify.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/User/themes/images/ico/favicon.ico">
</head>
<body>
    <div id="header">
        <div class="container">
            <div id="welcomeLine" class="row">
                <div class="span6">&nbsp;</div>
                <div class="span6">
                    @await Component.InvokeAsync("Cart")
                </div>
            </div>
            
            <div id="logoArea" class="navbar">
                <a id="smallScreen" data-target="#topMenu" data-toggle="collapse" class="btn btn-navbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <div class="navbar-inner">

                    @await Component.InvokeAsync("Logo")

                    @await Component.InvokeAsync("ProductSearch")

                    @await Component.InvokeAsync("MenuTop")

                </div>
            </div>
        </div>
    </div>
    <!-- Header End====================================================================== -->
    <div id="mainBody">
        <div class="container">
            <div class="row">
                <!-- Sidebar ================================================== -->
                <div id="sidebar" class="span3">

                    @await Component.InvokeAsync("Categories")

                    @await Component.InvokeAsync("CategoriesVendor")

                    <br />

                    @await Component.InvokeAsync("LastVendors")

                </div>
                <!-- Sidebar end=============================================== -->
                <div class="span9">

                    @RenderBody()

                </div>
            </div>
        </div>
    </div>
    <!-- MainBody End ============================= -->
    <!-- Footer ================================================================== -->
    <div id="footerSection">
        <div class="container">
            <div class="row">
                <div class="span3">
                    <h5>@SharedLocalizer["ACCOUNT"]</h5>
                    <a asp-area="customerpanel" asp-controller="Login" asp-action="Index">@SharedLocalizer["YOUR_ACCOUNT"]</a>
                    <a asp-area="customerpanel" asp-controller="orders" asp-action="index">@SharedLocalizer["ORDER_HISTORY"]</a>
                </div>
                <div class="span3">
                    <h5>@SharedLocalizer["INFORMATION"]</h5>
                    <a asp-controller="Page" asp-action="Detail" asp-route-id="about-us">@SharedLocalizer["ABOUT_US"]</a>
                    <a asp-controller="Page" asp-action="Detail" asp-route-id="legal-notice">@SharedLocalizer["LEGAL_NOTICE"]</a>
                    <a asp-controller="Page" asp-action="Detail" asp-route-id="tac">@SharedLocalizer["TERMS_AND_CONDITIONS"]</a>
                    <a asp-controller="Page" asp-action="Detail" asp-route-id="faq">@SharedLocalizer["FAQ"]</a>
                </div>
                <div id="socialMedia" class="span3">
                    @await Component.InvokeAsync("SocialMedia")
                </div>
                <div class="span3">
                    @await Component.InvokeAsync("ShopInfo")
                </div>
            </div>
            <p class="pull-left">
                <copyright />
            </p>
        </div>
    </div>

    <span id="themesBtn"></span>

    <script src="~/User/themes/js/jquery.js" type="text/javascript"></script>
    <script src="~/User/themes/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/User/themes/js/google-code-prettify/prettify.js"></script>

    <script src="~/User/themes/js/bootshop.js"></script>
    <script src="~/User/themes/js/jquery.lightbox-0.5.js"></script>

</body>
</html>
