@{
    ViewBag.Title = @SharedLocalizer["Edit_Photo_of"] + @ViewBag.product.Name;
    Layout = "~/Areas/VendorPanel/Views/Shared/_LayoutPage.cshtml";
}

@model OctopusCodesMultiVendor.Models.Photo

<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-8">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">@SharedLocalizer["Edit_Photo_of"] @ViewBag.product.Name</h3>
                </div>
                <!-- /.box-header --> <!-- form start -->
                @if (ViewBag.error != null)
                {
                    <div class="alert alert-danger alert-dismissible">
                        ViewBag.error
                    </div>
                }

                <form method="post" enctype="multipart/form-data" asp-controller="Product" asp-action="EditPhoto">

                    <div class="box-body">

                        <div class="form-group">
                            <label for="name">
                                @SharedLocalizer["Photo"]
                            </label>
                            <input type="file" name="name" accept="image/*" />
                            @if (ViewBag.errorPhoto != null)
                            {
                                <br />
                                <span style="color: red">@ViewBag.errorPhoto</span>
                            }
                            <br />
                            <img src="~/User/Images/@Model.Name" width="120" />
                        </div>

                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="Status" /> @SharedLocalizer["Status"]
                            </label>
                        </div>


                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">@SharedLocalizer["Save"]</button>
                    </div>
                    <input type="hidden" asp-for="ProductId" />
                    <input type="hidden" asp-for="Id" />
                </form>
            </div>
            <!-- /.box -->
        </div>
        <!--/.col (left) -->
    </div>
    <!-- /.row -->
</section>
