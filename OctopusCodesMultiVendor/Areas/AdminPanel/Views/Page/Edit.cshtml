@{
    ViewBag.Title = @SharedLocalizer["Edit_Page"];
    Layout = "~/Areas/AdminPanel/Views/Shared/_LayoutPage.cshtml";
}

@model OctopusCodesMultiVendor.Models.Page

<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-8">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">@SharedLocalizer["Edit_Page"]</h3>
                </div>
                <!-- /.box-header --> <!-- form start -->
                @if (ViewBag.error != null)
                {
                    <div class="alert alert-danger alert-dismissible">
                        ViewBag.error
                    </div>
                }

                <form method="post" asp-controller="Page" asp-action="Edit">
                    <div class="box-body">

                        <div class="form-group">
                            <label for="plug">
                                @SharedLocalizer["Plug"]
                            </label>
                            <input type="text"
                                   asp-for="Plug"
                                   class="form-control"
                                   required="required"
                                   placeholder="@SharedLocalizer["Plug"]" />
                            <span asp-validation-for="Plug"></span>
                        </div>

                        <div class="form-group">
                            <label for="title">
                                @SharedLocalizer["Title"]
                            </label>
                            <input type="text"
                                   asp-for="Title"
                                   class="form-control"
                                   required="required"
                                   placeholder="@SharedLocalizer["Title"]" />
                            <span asp-validation-for="Title"></span>
                        </div>

                        <div class="form-group">
                            <label for="description">
                                @SharedLocalizer["Content"]
                            </label>
                            <textarea asp-for="Detail" class="form-control" placeholder="@SharedLocalizer["Content"]"></textarea>
                            <span asp-validation-for="Detail"></span>

                        </div>

                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="Status" />  @SharedLocalizer["Status"]
                            </label>
                        </div>

                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">@SharedLocalizer["Save"]</button>
                    </div>

                    <input type="hidden" asp-for="Id" />

                </form>
            </div>
            <!-- /.box -->
        </div>
        <!--/.col (left) -->
    </div>
    <!-- /.row -->
</section>
