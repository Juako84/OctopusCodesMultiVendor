@{
    ViewBag.Title = "Membership Management";
    Layout = "~/Areas/AdminPanel/Views/Shared/_LayoutPage.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">@SharedLocalizer["MemberShip"]</h3>
                </div>
                <!-- /.box-header -->
                @if (TempData["error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible">
                        @TempData["error"]
                    </div>
                }
                <div class="box-body">
                    <div id="example1_wrapper"
                         class="dataTables_wrapper form-inline dt-bootstrap">
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="example1"
                                       class="table table-bordered table-striped dataTable">
                                    <thead>
                                        <tr role="row">
                                            <th class="no-sort">@SharedLocalizer["Id"]</th>
                                            <th class="no-sort">@SharedLocalizer["Package_Name"]</th>
                                            <th class="no-sort">@SharedLocalizer["Price"]</th>
                                            <th class="no-sort">@SharedLocalizer["Start_Date"]</th>
                                            <th class="no-sort">@SharedLocalizer["End_Date"]</th>
                                            <th class="no-sort">@SharedLocalizer["Vendor_Name"]</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var memberShipVendor in ViewBag.memberShipVendors)
                                        {
                                            <tr>
                                                <td>@memberShipVendor.Id</td>
                                                <td>@memberShipVendor.MemberShip.Name</td>
                                                <td>@memberShipVendor.Price.ToString("c")</td>
                                                <td>@memberShipVendor.StartDate.ToString("MM/dd/yyyy")</td>
                                                <td>@memberShipVendor.EndDate.ToString("MM/dd/yyyy")</td>
                                                <td>@memberShipVendor.Vendor.Name</td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
