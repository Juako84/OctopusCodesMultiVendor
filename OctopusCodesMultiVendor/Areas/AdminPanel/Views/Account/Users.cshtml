@{
    ViewBag.Title = "Usuarios del Sistema";
    Layout = "~/Areas/AdminPanel/Views/Shared/_LayoutPage.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">@SharedLocalizer["Users"]</h3>
                </div>
                <!-- /.box-header -->
                @if (TempData["error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible">
                        @TempData["error"]
                    </div>
                }
                <div class="box-body">
                    <div id="example1_wrapper"
                         class="dataTables_wrapper form-inline dt-bootstrap">
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="example1"
                                       class="table table-bordered table-striped dataTable">
                                    <thead>
                                        <tr role="row">
                                            <th class="no-sort">@SharedLocalizer["Id"]</th>
                                            <th class="no-sort">@SharedLocalizer["Username"]</th>
                                            <th class="no-sort">@SharedLocalizer["Full_Name"]</th>
                                            <th class="no-sort">@SharedLocalizer["Email"]</th>
                                            <th class="no-sort">@SharedLocalizer["Phone"]</th>
                                            <th class="no-sort">@SharedLocalizer["Status"]</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var user in ViewBag.Users)
                                        {
                                        <tr>
                                            <td>@user.Id</td>
                                            <td>@user.Username</td>
                                            <td>@user.FullName</td>
                                            <td>@user.Email</td>
                                            <td>@user.Phone</td>
                                            <td>
                                                <a asp-controller="Account" asp-action="Status" asp-route-id="@user.Id">@(user.Status ? SharedLocalizer["Active"] : SharedLocalizer["InActive"])</a>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
