        <titleAdmin />
    </title>

    <link rel="shortcut icon" href="~/User/themes/images/ico/favicon.ico">

    <script src="~/Admin/plugins/jQuery/jquery-2.2.3.min.js"></script>

    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <link rel="stylesheet" href="~/Admin/bootstrap/css/bootstrap.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">

    <link rel="stylesheet" href="~/Admin/dist/css/AdminLTE.min.css">

    <link href="~/Admin/dist/css/StyleSheet.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/Admin/dist/css/skins/_all-skins.min.css">

    <link rel="stylesheet" href="~/Admin/plugins/iCheck/flat/blue.css">

    <link rel="stylesheet" href="~/Admin/plugins/morris/morris.css">

    <link rel="stylesheet" href="~/Admin/plugins/jvectormap/jquery-jvectormap-1.2.2.css">

    <link rel="stylesheet" href="~/Admin/plugins/datepicker/datepicker3.css">

    <link rel="stylesheet" href="~/Admin/plugins/daterangepicker/daterangepicker.css">

    <link rel="stylesheet" href="~/Admin/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css">
    <link rel="stylesheet" href="~/Admin/plugins/datatables/dataTables.bootstrap.css">

</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <a asp-controller="Category" asp-action="Index" class="logo">
                <span class="logo-mini"><b>A</b>LT</span>
                <span class="logo-lg"><b>@SharedLocalizer["Admin_Panel"]</b></span>
            </a>
            <nav class="navbar navbar-static-top">
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">&nbsp;</span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <span class="hidden-xs">
                                    <welcomeAdmin />
                                </span>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a asp-controller="Login" asp-action="Profile" class="btn btn-default btn-flat">@SharedLocalizer["Profile"]</a>
                                    </div>
                                    <div class="pull-right">
                                        <a asp-controller="Login" asp-action="SignOut" class="btn btn-default btn-flat">@SharedLocalizer["Sign_out"]</a>
                                    </div>
                                </li>
                            </ul>
                        </li>

                    </ul>
                </div>
            </nav>
        </header>
        <aside class="main-sidebar">
            <section class="sidebar">
                <ul class="sidebar-menu">

                    
                    <li><a asp-controller="Home" asp-action="Index"><i class="fa fa-reply"></i> <span>@SharedLocalizer["Home"]</span></a></li>

                    <li class="active treeview">
                        <a href="#">
                            <i class="fa fa-"></i>
                            <span>@SharedLocalizer["Categories"]</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a asp-controller="Category" asp-action="Add"><i class="fa fa-circle-o"></i> @SharedLocalizer["Add"]</a></li>
                            <li><a asp-controller="Category" asp-action="Index"><i class="fa fa-circle-o"></i> @SharedLocalizer["List"]</a></li>

                        </ul>
                    </li>

                    <li class="active treeview">
                        <a href="#">
                            <i class="fa fa-laptop"></i>
                            <span>@SharedLocalizer["Products"]</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a asp-controller="Product" asp-action="Index"><i class="fa fa-circle-o"></i> @SharedLocalizer["List"]</a></li>
                        </ul>
                    </li>

                    <li class="active treeview">
                        <a href="#">
                            <i class="fa fa-laptop"></i>
                            <span>@SharedLocalizer["Orders"]</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a asp-controller="Orders" asp-action="Index"><i class="fa fa-circle-o"></i> @SharedLocalizer["List"]</a></li>

                        </ul>
                    </li>

                    <li class="active treeview">
                        <a href="#">
                            <i class="fa fa-laptop"></i>
                            <span>@SharedLocalizer["Accounts"]</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a asp-controller="Customer" asp-action="Index"><i class="fa fa-circle-o"></i> @SharedLocalizer["Customers"]</a></li>
                            <li><a asp-controller="Vendor" asp-action="Index"><i class="fa fa-circle-o"></i> @SharedLocalizer["Vendors"]</a></li>
                            <li><a asp-controller="Account" asp-action="Users"><i class="fa fa-circle-o"></i> @SharedLocalizer["Users"]</a></li>

                        </ul>
                    </li>

                    <li class="active treeview">
                        <a href="#">
                            <i class="fa fa-laptop"></i>
                            <span>@SharedLocalizer["MemberShip"]</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a asp-controller="MemberShip" asp-action="Add"><i class="fa fa-circle-o"></i> @SharedLocalizer["Add"]</a></li>
                            <li><a asp-controller="MemberShip" asp-action="Index"><i class="fa fa-circle-o"></i> @SharedLocalizer["List"]</a></li>

                        </ul>
                    </li>

                    <li class="active  treeview">
                        <a href="#">
                            <i class="fa fa-laptop"></i>
                            <span>@SharedLocalizer["Pages"]</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li>
                                <a asp-controller="Page" asp-action="Index"><i class="fa fa-circle-o"></i> @SharedLocalizer["List"]</a>
                            </li>

                        </ul>
                    </li>

                    <li class=" active  treeview">
                        <a href="#">
                            <i class="fa fa-laptop"></i>
                            <span>@SharedLocalizer["Settings"]</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a asp-controller="Setting" asp-action="Group" asp-route-id="general"><i class="fa fa-circle-o"></i> @SharedLocalizer["General"]</a></li>
                            <li><a asp-controller="Setting" asp-action="Group" asp-route-id="paypal"><i class="fa fa-circle-o"></i> @SharedLocalizer["Paypal"]</a></li>
                            <li><a asp-controller="Setting" asp-action="Group" asp-route-id="social network"><i class="fa fa-circle-o"></i> @SharedLocalizer["Social_Networks"]</a></li>

                        </ul>
                    </li>

                </ul>
            </section>
        </aside>
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <footer class="main-footer">
            <div class="pull-right hidden-xs"></div>
            <copyright />
        </footer>

        <div class="control-sidebar-bg"></div>
    </div>
    <script src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js"></script>
    <script>
        $.widget.bridge('uibutton', $.ui.button);
    </script>
    <script src="~/Admin/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Admin/plugins/datatables/dataTables.bootstrap.min.js"></script>
    <script src="~/Admin/bootstrap/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
    <script src="~/Admin/plugins/sparkline/jquery.sparkline.min.js"></script>
    <script src="~/Admin/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js"></script>
    <script src="~/Admin/plugins/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
    <script src="~/Admin/plugins/knob/jquery.knob.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.11.2/moment.min.js"></script>
    <script src="~/Admin/plugins/daterangepicker/daterangepicker.js"></script>
    <script src="~/Admin/plugins/datepicker/bootstrap-datepicker.js"></script>
    <script src="~/Admin/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js"></script>
    <script src="~/Admin/plugins/slimScroll/jquery.slimscroll.min.js"></script>
    <script src="~/Admin/plugins/fastclick/fastclick.js"></script>
    <script src="~/Admin/dist/js/app.min.js"></script>
    <script src="~/Admin/dist/js/demo.js"></script>
    <script src="https://cdn.ckeditor.com/4.5.7/standard/ckeditor.js"></script>
